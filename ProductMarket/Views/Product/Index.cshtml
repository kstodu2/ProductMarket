@model IEnumerable<Product>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<section class="py-5 text-center container">
    
    <div class="album py-5 bg-body-tertiary">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach(var item in Model)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <img src="@item.Image" class="bd-placeholder-img card-img-top" width="100%" height="225" alt="Product Image">
                            <div class="card-body">
                                <p class="card-text font-weight-bold">@item.ProductName</p>
                                <p class="card-text">@item.ProductDescription</p>
                                <p class="card-text font-weight-bold">Price: $@item.ProductPrice</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-controller="product" asp-action="Detail" asp-route-id="@item.ProductId" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                        
                                        @if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                        {
                                            <a type="button" asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductId"
                                            class="btn btn-sm btn-outline-secondary">Edit</a>
                                            <a type="button" asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId"
                                               class="btn btn-sm btn-outline-secondary">Delete</a>
                                        }
                                    </div>
                                    <small class="text-body-secondary">@item.ProductCategory</small>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            
</section>